# install kubectl

curl -LO "https://dl.k8s.io/release/$(curl -L -s https://dl.k8s.io/release/stable.txt)/bin/linux/amd64/kubectl"
chmod +x kubectl 
mv kubectl /usr/local/bin/
kubectl version

# install k8s

curl -Lo kops https://github.com/kubernetes/kops/releases/download/$(curl -s https://api.github.com/repos/kubernetes/kops/releases/latest | grep tag_name | cut -d '"' -f 4)/kops-linux-amd64
chmod +x kops
sudo mv kops /usr/local/bin/kops

# installing aws cli
sudo apt update && apt install unzip -y 
curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip"
unzip awscliv2.zip
sudo ./aws/install

# create the s3 bucket to store the cluster info 
aws s3 ls 
aws s3 mb s3://vija2000
aws se rm s3://vija2000

# sev env variable for s3 to store in  local system
export 
# setup the cluster using Kops
kops create cluster --name vijay.k8.local --zones=us-east-1a,us-east-1b --control-plane-size c7i-flex.large \
--control-plane-count 1 --control-plane-volume-size 20 --node-size t3.micro --node-volume-size 20 --node-count 2 --image=ami-0ecb62995f68bb549



